#include<stdio.h>
int main(){
	//1.输入排序，从小到大
	int N,temp;
	double sum=0;
	int k=0;
	scanf("%d",&N);
	int num[10000];
	for(int i=0;i<=N-1;i++){
		scanf("%d",&num[i]);
	} 
	for(int i=2;i<=N;i++){
		for(int j=0;j<=N-i;j++){
			if(num[j]>num[j+1]){
				temp=num[j+1];
				num[j+1]=num[j];
				num[j]=temp;
			}
		}
	}
	sum=(double)num[0]/2+(double)num[1]/2;
	for(int i=2;i<=N-1;i++){
		sum=sum/2;
		sum=sum+(double)num[i]/2;
	}
	sum=(int)sum;
	while(k<=sum){
		k++;
	}
	printf("%d",k-1);
	return 0;
}
