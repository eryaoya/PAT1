    int coef,exp;
    int flag1=1;//用来标记第一对数
    int flag2=1;//标记是否有常数
    while(1){
        scanf("%d%d", &coef, &exp);
        int c=getchar();
        if(exp!=0){
        if(flag1==1){
            printf("%d %d", coef*exp, exp-1);
            flag1=0;
        }
        else
            printf(" %d %d", coef*exp, exp-1);
        flag2=0;
        }
        if(c=='\n')
            break;
    }
    if(flcoefg2==1)
        printf("0 0");
